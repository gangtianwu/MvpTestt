<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_current"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/cardview_light_background"></android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_fragment_current"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/cardview_light_background"
        app:tabIndicatorColor="#f34d64"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#f34d64"
        app:tabTextAppearance="@style/MyCustomTabTextAppearance">

    </android.support.design.widget.TabLayout>
</LinearLayout>