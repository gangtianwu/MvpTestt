<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_mynews_firstname"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_circle_ye"
            android:gravity="center"
            android:text="业"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_mynews_title"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="报送内容提交前审批全部通过,并且又给通过状态..."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_mynews_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="2017-12-20"
                android:textColor="#b3b3b3"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_item_mynews_content"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_mynews_title"
                android:layout_marginTop="9dp"
                android:singleLine="true"
                android:text="您提交审批的党务信息新增已审批通过,全部通过,并且又给通过..."
                android:textColor="@color/dull_blue"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="63dp"
        android:background="#e0e1e5" />

</LinearLayout>